generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  ADMIN
}

enum PaymentStatus {
  UNPAID
  PAID
  PARTIALLY
}

enum ShippingStatus {
  PENDING
  TRANSIT
  DELIVERED
}

enum Measure {
  PIECE
  KILOGRAM
  LITER
  METER
}

model Employee {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     Role   @default(EMPLOYEE)

  orders Order[]
  tokens Token[]
}

model Token {
  id           Int    @id @default(autoincrement())
  employeeId   Int    @unique @map("employee_id")
  refreshToken String @map("refresh_token")

  employees Employee @relation(fields: [employeeId], references: [id])
}

model Vendor {
  id         Int    @id @default(autoincrement())
  name       String
  address    String
  phone      String
  email      String
  categoryId Int    @map("category_id")

  category  Category    @relation(fields: [categoryId], references: [id])
  inventory Inventory[]
  orders    Order[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  vendors   Vendor[]
  inventory Inventory[]
}

model Inventory {
  id          Int     @id @default(autoincrement())
  name        String
  measure     Measure
  quantity    Int
  description String
  categoryId  Int     @map("category_id")
  vendorId    Int     @map("vendor_id")

  orders   Order[]
  category Category @relation(fields: [categoryId], references: [id])
  vendor   Vendor   @relation(fields: [vendorId], references: [id])
}

model Order {
  id             Int            @id @default(autoincrement())
  orderDate      DateTime       @default(now()) @map("order_date")
  paymentStatus  PaymentStatus  @map("payment_status")
  shippingStatus ShippingStatus @map("shipping_status")
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @default(now()) @map("updated_at")
  employeeId     Int            @map("employee_id")
  vendorId       Int            @map("vendor_id")
  inventoryId    Int            @map("inventory_id")
  quantity       Int
  proven         Boolean        @default(false)

  inventory Inventory @relation(fields: [inventoryId], references: [id])
  employee  Employee  @relation(fields: [employeeId], references: [id])
  vendor    Vendor    @relation(fields: [vendorId], references: [id])
}
